{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "target": "es2015",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ]
}